@model List<KidKinder.Entities.About>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-5">
                    <img class="img-fluid rounded mb-5 mb-lg-0" src="@item.BigImageUrl" alt="about" />
                </div>


                <div class="col-lg-7">
                    <p class="section-title pr-5">
                        <span class="pr-2">@item.Title</span>
                    </p>
                    <h1 class="mb-4">@item.Header</h1>
                    <p>
                        @item.Description
                    </p>
                    <div class="row pt-2 pb-4">
                        <div class="col-6 col-md-4">
                            <img class="img-fluid rounded" src="@item.SmallImageUrl" alt="" />
                        </div>
                        @Html.Action("PartialAboutList", "Default")
                    </div>
                    <a href="" class="btn btn-primary mt-2 py-2 px-4">Daha Fazla</a>
                </div>
            }
        </div>
    </div>
</div>
